<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<% @restaurants.each do |restaurant| %>
  <p><%= restaurant.id%></p>
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <p><%= restaurant.address %></p>
  <p><%= restaurant.category %></p>
<% end %>

<%= link_to "Add restaurant", new_restaurant_path %>
